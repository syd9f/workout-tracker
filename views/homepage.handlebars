{{!-- profile page content --}}
<div class="left-col">
<div id="welcome"><h2>Welcome, {{user.name}}!</h2></div>

<section  id="accomplishments">
  <div><h2>Accomplishments</h2></div>

  <form class="form new-accomplishments-form">
  <div class="form-group">
    <label for="excercises-completed">Exercises Completed:</label>
    <input class="form-input" type="text" id="excercises-completed" name="excercises-completed" />
  </div>

    <div class="form-group">
    <label for="goals-met">Goals Met:</label>
    <input class="form-input" type="text" id="goals-met" name="goals-met" />
  </div>

    <div class="form-group">
    <label for="calorie-burn">Calories Burnt:</label>
    <input class="form-input" type="text" id="calorie-burn" name="calorie-burn" />
  </div>
  </form>
  
</section>

<section id="goals">
    <h2>Goals</h2>
    <button>Set a Goal</button>
    {{#each goal as |goal| }}
    <div>
        <h3>{{goal.goal}}</h3>
    </div>
    <div>
      <button>Mark as Complete</button>
    </div>
    {{/each}}
</section>
</div>
<div class="right-col">
<section id="exercises">
    <h2>Scheduled Exercises</h2>
    <button>Add to Schedule</button>
    {{!-- Add a scroll list with sections that display Date, Time, and exercise title with a button to mark complete for each scheduled exercise--}}
    {{#each scheduledExercise as |scheduledExercise| }}
    <div class="sched">
      <div>
        <h3>{{scheduledExercise.date}}</h3>
      </div>
      <div>
        <h3>{{scheduledExercise.time}}</h4>
        <h4>{{scheduledExercise.duration}}</h4>
      </div>
      <div>
      <h3>{{scheduledExercise.title}}</h3>
      </div>
      <div>
      <button>Mark as Complete</button>
      </div>
    </div>
    {{/each}}
</section>
</div>